<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity" >

    <TextView
        android:id="@+id/sdk_version_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sample_app_version_text"
        android:layout_below="@+id/sample_app_version_text"
        android:text="@string/about_sdk_version" />

    <TextView
        android:id="@+id/sample_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sample_app_version_text"
        android:layout_alignBottom="@+id/sample_app_version_text"
        android:layout_marginLeft="51dp"
        android:layout_toRightOf="@+id/sdk_version_text" 
        android:text="@string/version" />

    <TextView
        android:id="@+id/sdk_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sample_app_version"
        android:layout_below="@+id/sample_app_version" />

    <TextView
        android:id="@+id/sample_app_version_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="35dp"
        android:text="@string/about_app_version" />

</RelativeLayout>